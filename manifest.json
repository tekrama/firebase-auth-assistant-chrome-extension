{
  "name": "Firebase Auth Assistant",
  "version": "0.1.0",
  "description": "See and copy the information saved by Firebase Authentication JavaScript library for the actual page.",
  "author": "Tekrama",
  "permissions": ["activeTab", "tabs"],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["src/content.js"]
  }],
  "page_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/images/firebase16.png",
      "32": "src/assets/images/firebase32.png",
      "48": "src/assets/images/firebase48.png",
      "128": "src/assets/images/firebase128.png"
    }
  },
  "icons": {
    "16": "src/assets/images/firebase16.png",
    "32": "src/assets/images/firebase32.png",
    "48": "src/assets/images/firebase48.png",
    "128": "src/assets/images/firebase128.png"
  },
  "manifest_version": 2
}